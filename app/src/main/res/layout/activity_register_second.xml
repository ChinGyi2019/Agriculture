<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.RegisterSecondActivity" android:background="@color/colorPrimary">
    <EditText

            android:layout_width="match_parent"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/LoginEditTestView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints=""
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/opt_pass_edit_layout"
            android:textColor="@color/colorWhite" android:layout_height="70dp" android:textAlignment="center"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:textCursorDrawable="@drawable/color_cursor_white" android:layout_marginTop="316dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button

            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LoginRegisterBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LoginEditTestView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.168" android:background="@drawable/opt_pass_edit_layout"
            android:textColor="@color/colorWhite" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/verification"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginEditTestView"/>
    <TextView
            android:text="Verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="18sp"
            android:textColor="@color/colorWhite" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/LoginEditTestView"/>
</android.support.constraint.ConstraintLayout>