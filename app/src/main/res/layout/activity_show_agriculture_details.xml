<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.ShowAgricultureDetailsActivity">
<LinearLayout
        android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/details_tool_bar"
            app:itemTextColor="#fff"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:collapseIcon="@drawable/white_arrow"
            app:navigationIcon="?attr/homeAsUpIndicator">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/app_bar_title"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/favouriteBtn"
                    android:src="@drawable/star"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/agri_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub_card_view"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginRight="6sp"
                    android:textSize="16sp"
                    android:text="အမ်ိဳးအမည္ :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"/>
            <TextView
                    android:layout_marginLeft="6sp"
                    android:text="Grape"
                    android:textSize="22sp"
                    android:id="@+id/agri_name" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"/>
        </LinearLayout>
            <View   android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"
                    android:layout_width="match_parent" android:layout_height="1dp"></View>


        </LinearLayout>


    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/first_desp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_margin="8dp"
                    android:layout_marginRight="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="120dp"
                            android:src="@drawable/gardening"
                            tools:srcCompat="@tools:sample/avatars[3]"/>

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="စိုက်ပျိုးနည်း"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_google_signin_btn_text_light_pressed"/>

                </LinearLayout>
                <ImageView
                            android:layout_width="50dp"
                           android:layout_gravity="right" android:layout_height="match_parent"
                           android:src="@drawable/right_head_arrow"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/second_desp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@drawable/watering"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            tools:srcCompat="@tools:sample/avatars[1]" app:srcCompat="@drawable/vegetables"/>

                    <TextView
                            android:layout_gravity="center_vertical"
                           android:layout_marginLeft="10dp"
                            android:text="မြေဆီလွှာ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_google_signin_btn_text_light_pressed"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_gravity="right" android:layout_height="match_parent"
                        android:src="@drawable/right_head_arrow"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/third_desp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@drawable/agriculture"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            tools:srcCompat="@tools:sample/avatars[5]" app:srcCompat="@drawable/market"/>

                    <TextView
                            android:layout_gravity="center_vertical"
                           android:layout_marginLeft="10dp"
                            android:text="ပေါင်းသင်နည်း"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_google_signin_btn_text_light_pressed"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_gravity="right" android:layout_height="match_parent"
                        android:src="@drawable/right_head_arrow"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/fourth_desp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@drawable/farmer"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            tools:srcCompat="@tools:sample/avatars[4]" app:srcCompat="@drawable/books"/>

                    <TextView
                            android:layout_marginLeft="10dp"
                           android:layout_gravity="center_vertical"
                            android:text="ရိတ်သိမ်းချိန်"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_google_signin_btn_text_light_pressed"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_gravity="right" android:layout_height="match_parent"
                        android:src="@drawable/right_head_arrow"/>
            </android.support.v7.widget.CardView>
    </LinearLayout>


    </ScrollView>
