<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp" tools:srcCompat="@tools:sample/avatars[15]"
            android:id="@+id/bookImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="ေကာင္းမြန္ေသာစိုက္ပ်ိဳးၿခင္း"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_name" app:layout_constraintStart_toEndOf="@+id/bookImage"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/book_Description" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/bookImage" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/book_name" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.456" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>